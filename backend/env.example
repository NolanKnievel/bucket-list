# Backend Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Server Configuration
PORT=8080
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bucket_list_db

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Application Mode
GIN_MODE=debug
# Use 'release' for production

# Logging Configuration
LOG_LEVEL=info
# Options: debug, info, warn, error
LOG_FORMAT=text
# Options: text, json

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Metrics Configuration
METRICS_ENABLED=false
METRICS_PORT=9090

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# JWT Configuration (additional security)
JWT_SECRET=your-additional-jwt-secret

# Error Tracking (for production)
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment and modify these for development

# LOG_LEVEL=debug
# GIN_MODE=debug
# METRICS_ENABLED=true 